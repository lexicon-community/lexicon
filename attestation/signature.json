{
    "lexicon": 1,
    "id": "community.lexicon.attestation.defs",
    "defs": {
        "signatures": {
            "type": "array",
            "items": {
                "type": "ref",
                "ref": "#signature"
            }
        },
        "signature": {
            "type": "object",
            "properties": {
                "signature": {
                    "type": "string"
                },
                "issuer": {
                    "type": "string",
                    "format": "did"
                },
                "did": {
                    "type": "string",
                    "format": "did"
                },
                "collection": {
                    "type": "string",
                    "format": "nsid"
                },
                "notBefore": {
                    "type": "string",
                    "format": "datetime"
                },
                "notAfter": {
                    "type": "string",
                    "format": "datetime"
                },
                "revocation": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "signature",
                "issuer"
            ]
        }
    }
}