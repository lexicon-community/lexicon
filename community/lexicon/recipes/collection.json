{
  "lexicon": 1,
  "id": "community.lexicon.recipes.collection",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record for a collection of recipes.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name", "createdAt", "updatedAt"],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 100
          },
          "text": {
            "type": "string",
            "maxLength": 1000
          },
          "recipes": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "com.atproto.repo.strongRef"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "updatedAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
